generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  CREDENTIALS
  GOOGLE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique

  // For Password Login
  password  String? 

  // OAuth
  provider AuthProvider @default(CREDENTIALS)
  googleId String?   @unique

  //Magic Link
  magicToken String?
  magicExpiresAt DateTime?
  code String?

  createdAt DateTime @default(now())
}

